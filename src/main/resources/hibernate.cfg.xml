		<mapping class="fr.guronzan.mediatheque.mappingclasses.domain.Movie" />
		<mapping class="fr.guronzan.mediatheque.mappingclasses.domain.CD" />
		<mapping class="fr.guronzan.mediatheque.mappingclasses.domain.Book" />
	</session-factory>
</hibernate-configuration>